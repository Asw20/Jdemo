<%- include layouts/header.ejs %>

        <div class="page-data">
            
            <form method="post" action="/users/add">
                <table cellpadding="11">
                <tr>
                    <td class="label">Username</td><td>: <input type="text" name="username" <% if (data.username) {%> value="<%=data.username%>" <%} %> required></td>
                 </tr>
                 <tr>
                    <td class="label" valign="top">Password</td><td>: <input type="password" name="password" value="<% if(data.password) {%> <%=data.password%> <%}%>" required></td>
                </tr>
                <tr>
                    <td class="label">Phone</td><td>: <input type="tel" name="phone" <% if(data.phone) {%> value="<%=data.phone%>"<%} %> > </td>
                </tr>
                <tr>
                    <td class="label">Email</td><td>: <input type="email" name="email" <% if(data.email) {%> value="<%=data.email%>" <%} %> required ></td>
                 </tr>
                  <tr>
                    <td class="label">Language</td>
                       <td>:
                            <select class="input-medium" id="language" name="language">
            				<option value="">Select</option>
            				<option value="Fr">Francais</option>
            				<option value="En">English</option>
            				<option value="Sp">Spanish</option>
            				<option selected><%if(data.language) {%> <%=data.language%> <%} %></option>
        					</select>
        				</td>
                 </tr>
                 <tr>
                    <td class="label">Note</td><td valign="top">: <textarea name="note" cols="30" rows="5"><% if(data.note) {%> <%=data.note%> <%} %></textarea></td>
                 </tr>
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                 </tr>
                 <tr>
                    <td class="label">
                    	<% if (message) { %>
  							<p> Message :</p>
						<% } %>
					</td>
                    <td> <%=message%>
                    </td>
                </table>
            </form>
            
        </div>
        
<%- include layouts/footer.ejs %>
